{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "strict": true,
    "outDir": "./dist/js",
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src/ts",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}